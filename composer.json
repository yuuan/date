{
    "name": "yuuan/date",
    "description": "Representation of date or month",
    "type": "library",
    "homepage": "https://github.com/yuuan/date",
    "authors": [
        {
            "name": "yuuAn",
            "homepage": "https://github.com/yuuan"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "nesbot/carbon": "^2.46",
        "yuuan/readonly": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "phpstan/phpstan": "^1.4.0",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "fix": "php-cs-fixer fix",
        "lint": "php-cs-fixer fix --dry-run",
        "phpstan": "phpstan analyse",
        "test": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "Yuuan\\Date\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yuuan\\Tests\\Date\\": "tests/"
        }
    },
    "license": "MIT"
}
